  features = {
    # audio
    mpd.enable = true;
    pro-audio.enable = true;

    # cron
    cron-hyprpaper.enable = true;
    cron-low-bat.enable = true;

    # dev
    git.enable = true;
    dev-env.enable = true;
    tmux.enable = false;
